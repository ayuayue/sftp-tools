{
  "name": "sftp-tools",
  "displayName": "SFTP Tools",
  "description": "A powerful SFTP/FTP client for VS Code with an intuitive interface",
  "publisher": "caoayu",
  "version": "1.0.2",
  "author": {
    "name": "caoayu",
    "email": "caoayu80@gmail.com"
  },
  "license": "MIT",
  "icon": "media/sftp.png",
  "galleryBanner": {
    "color": "#C80000",
    "theme": "dark"
  },
  "keywords": [
    "sftp",
    "ftp",
    "remote",
    "upload",
    "download",
    "sync",
    "file transfer"
  ],
  "categories": [
    "Other",
    "SCM Providers"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ayuayue/sftp-tools.git"
  },
  "bugs": {
    "url": "https://github.com/ayuayue/sftp-tools/issues"
  },
  "homepage": "https://github.com/ayuayue/sftp-tools#readme",
  "engines": {
    "vscode": "^1.93.0"
  },
  "activationEvents": [
    "onStartupFinished",
    "onCommand:sftp-tools.openSettingsEditor",
    "onView:sftp-tools-servers",
    "onView:sftp-tools-explorer"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "sftp-tools.showInfo",
        "title": "SFTP Tools: Show Configuration Info",
        "icon": "$(info)"
      },
      {
        "command": "sftp-tools.addServer",
        "title": "Add Server",
        "icon": "$(add)"
      },
      {
        "command": "sftp-tools.editServer",
        "title": "Edit Server",
        "icon": "$(edit)"
      },
      {
        "command": "sftp-tools.deleteServer",
        "title": "Delete Server",
        "icon": "$(trash)"
      },
      {
        "command": "sftp-tools.openSettings",
        "title": "Open Settings",
        "icon": "$(gear)"
      },
      {
        "command": "sftp-tools.openSettingsEditor",
        "title": "Open Settings Editor",
        "icon": "$(gear)",
        "category": "SFTP Tools"
      },
      {
        "command": "sftp-tools.refreshServers",
        "title": "Refresh Servers",
        "icon": "$(refresh)"
      },
      {
        "command": "sftp-tools.refreshExplorer",
        "title": "Refresh Explorer",
        "icon": "$(refresh)"
      },
      {
        "command": "sftp-tools.uploadFile",
        "title": "上传到当前服务器",
        "icon": "$(cloud-upload)"
      },
      {
        "command": "sftp-tools.openFileNonPreview",
        "title": "Open File (Non-Preview)"
      },
      {
        "command": "sftp-tools.uploadToServer",
        "title": "上传到其他服务器...",
        "icon": "$(cloud-upload)"
      },
      {
        "command": "sftp-tools.disconnectServer",
        "title": "Disconnect Server",
        "icon": "$(debug-disconnect)"
      },
      {
        "command": "sftp-tools.uploadToAllServers",
        "title": "上传到所有服务器",
        "icon": "$(cloud-upload)"
      },
      {
        "command": "sftp-tools.deleteRemoteFile",
        "title": "Delete Remote File",
        "icon": "$(trash)"
      },
      {
        "command": "sftp-tools.downloadRemoteFile",
        "title": "Download Remote File",
        "icon": "$(cloud-download)"
      }
    ],
    "configuration": {
      "title": "SFTP Tools",
      "properties": {
        "sftp-tools.servers": {
          "type": "array",
          "default": [],
          "description": "SFTP server configurations",
          "items": {
            "type": "object",
            "required": ["name", "host", "username", "remotePath"],
            "properties": {
              "name": {
                "type": "string",
                "description": "Server name"
              },
              "host": {
                "type": "string",
                "description": "Server host"
              },
              "port": {
                "type": "number",
                "default": 22,
                "description": "Server port"
              },
              "username": {
                "type": "string",
                "description": "Username"
              },
              "password": {
                "type": "string",
                "description": "Password"
              },
              "remotePath": {
                "type": "string",
                "description": "Remote path"
              }
            }
          }
        }
      }
    },
    "menus": {
      "view/title": [
        {
          "command": "sftp-tools.showInfo",
          "when": "view == sftp-tools-servers",
          "group": "navigation"
        },
        {
          "command": "sftp-tools.refreshServers",
          "when": "view == sftp-tools-servers",
          "group": "navigation"
        },
        {
          "command": "sftp-tools.refreshExplorer",
          "when": "view == sftp-tools-explorer",
          "group": "navigation"
        },
        {
          "command": "sftp-tools.openSettingsEditor",
          "when": "view == sftp-tools-servers",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "sftp-tools.editServer",
          "when": "view == sftp-tools-servers",
          "group": "inline"
        },
        {
          "command": "sftp-tools.deleteServer",
          "when": "view == sftp-tools-servers",
          "group": "inline"
        },
        {
          "command": "sftp-tools.openFileNonPreview",
          "when": "view == sftp-tools-explorer && viewItem == file",
          "group": "navigation"
        },
        {
          "command": "sftp-tools.disconnectServer",
          "when": "view == sftp-tools-servers && viewItem == activeServer",
          "group": "inline"
        },{
          "command": "sftp-tools.downloadRemoteFile",
          "when": "view == sftp-tools-explorer && viewItem == file",
          "group": "1_modification"
        },
        {
          "command": "sftp-tools.deleteRemoteFile",
          "when": "view == sftp-tools-explorer && viewItem == file",
          "group": "1_modification"
        }
      ],
      "editor/title": [
        {
          "command": "sftp-tools.uploadFile",
          "when": "resourceScheme == file",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "submenu": "sftp-tools.uploadSubmenu",
          "when": "resourceScheme == file",
          "group": "sftp-tools@1"
        }
      ],
      "sftp-tools.uploadSubmenu": [
        {
          "command": "sftp-tools.uploadFile",
          "title": "上传到当前服务器",
          "when": "resourceScheme == file",
          "group": "upload@1"
        },
        {
          "command": "sftp-tools.uploadToServer",
          "title": "上传到其他服务器...",
          "when": "resourceScheme == file",
          "group": "upload@2"
        },
        {
          "command": "sftp-tools.uploadToAllServers",
          "title": "上传到所有服务器",
          "when": "resourceScheme == file",
          "group": "upload@3"
        }
      ],
      "explorer/context": [
        {
          "command": "sftp-tools.deleteRemoteFile",
          "when": "resourceScheme == 'sftp'",
          "group": "2_modification"
        },
        {
          "command": "sftp-tools.downloadRemoteFile",
          "when": "resourceScheme == 'sftp'",
          "group": "2_modification"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "sftp-tools",
          "title": "SFTP Tools",
          "icon": "media/sftp.svg"
        }
      ]
    },
    "views": {
      "sftp-tools": [
        {
          "id": "sftp-tools-servers",
          "name": "SFTP 服务器",
          "icon": "resources/server.svg",
          "contextualTitle": "SFTP 服务器"
        },
        {
          "id": "sftp-tools-explorer",
          "name": "Explorer",
          "type": "tree"
        }
      ]
    },
    "submenus": [
      {
        "id": "sftp-tools.uploadSubmenu",
        "label": "SFTP-Tools Upload"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "dependencies": {
    "ssh2": "^1.15.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.93.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "eslint": "^9.19.0",
    "typescript": "^5.7.3",
    "ts-loader": "^9.5.2",
    "webpack": "^5.97.1",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "@types/ssh2": "^1.11.19"
  }
}
